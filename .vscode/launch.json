    "configurations": [
        {
            /* Used for launching Firefox in debug mode. */
            "name": "Launch and attatch to Firefox",
            "reAttach": true,
            "request": "launch",
            "type": "firefox",
            "url": "http://localhost:8443/dev.janwiesemann.de/index.php",
            "webRoot": "${workspaceFolder}"
        },
        {
            /* Attatch to a running instance of Firefox */
            "name": "Attach to Firefox",
            "request": "attach",
            "type": "firefox"
        },
        {
            "name": "Listen for Xdebug",
            "port": 9003,
            "request": "launch",
            "type": "php"
        }
    ],
    "version": "0.2.0"
}
